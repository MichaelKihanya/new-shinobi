<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">T-Shirt Shop</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-4">
          <h2 class="text-xl font-semibold mb-2"><%= product.title %></h2>
          <p class="text-gray-600 mb-4"><%= product.description %></p>
          <div class="flex justify-between items-center">
            <span class="text-lg font-bold">$<%= number_with_precision(product.price, precision: 2) %></span>
            <%= link_to "View Details", shop_path(product), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
